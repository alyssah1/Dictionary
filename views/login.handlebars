<div class="bg">

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <br>
            <br>
            <br>
            <h1 class = "display-4" style="font-family: neucha;text-align:-webkit-center;color:blue;">Happy Holidays!</h1>
            <h1 class="display-4" id="welcome" style="font-family: neucha;text-align:-webkit-center;color:crimson;">Welcome to My Dictionary!</h1>
            <h2 class="lead" style="font-family: neucha;text-align:-webkit-center;color:black;">Please Login or sign-up to start My Dictionary.</h2>
            <h2 style="font-family: neucha;">Login Form</h2>
            <form id="credentialForm">
                <div class="form-group">
                    <label for="username" style="font-family: neucha;">Username</label>
                    <input type="text" class="form-control" id="username" placeholder="username" name="username">
                </div>
                <div class="form-group">
                    <label for="password" style="font-family: neucha;">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password">
                </div>
                <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span> <span class="msg"></span>
                </div>
                <button type="submit" class="btn btn-default" style="font-family: neucha;">Login</button>
            </form>
            <br />
            <p style="font-family: neucha;">Or sign up <a href="/signup" style="font-family: neucha;">here</a></p>
        </div>
    </div>
</div>
</div>

<!--suppress JSUnresolvedVariable -->
<script>
    let $credentialForm = $('#credentialForm');

    $credentialForm.on('submit', (event) => {
        event.preventDefault();

        let userCredentials = {
            username: $('#username').val().trim(),
            password: $('#password').val().trim()
        };

        $.post('/api/login', userCredentials).then(() => {
            window.location.replace('/dashboard');
        }).catch(err => {
            let errorMessage = err.responseJSON.message;
            $("#alert .msg").text(errorMessage);
            $("#alert").fadeIn(500);
        })
    });

    jQuery(document).ready(function($){
        $(document).snowFlurry({
            maxSize:5,
            numberofFlakes: 500,
            minSpeed: 10,
            maxSpeed: 15,
            color: '#fff',
            timeout: 0
        });
    });
</script>
